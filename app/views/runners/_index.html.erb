<%= form_for @runner do |f| %>
    <% if @runner.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@runner.errors.count, "error") %> prohibited this runner from being registered:</h2>
          <ul>
            <% @runner.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <p>
      <%= f.label :first_name %><br>
      <%= f.text_field :first_name %>
    </p>

    <p>
      <%= f.label :last_name %><br>
      <%= f.text_field :last_name %>
    </p>

    <p>
      <%= f.label :age %><br>
      <%= f.text_field :age %>
    </p>

    <p>
      <%= f.label :gender %><br>
      <%= f.select :gender, [['Female','female'], ['Male','male']] %>
    </p>

    <p>
      <%= f.label :level %><br>
      <%= f.select :level, [['Basic','basic'], ['Intermediate','intermediate'], ['Advanced','advanced'], ['Professional','professional']] %>
    </p>

    <p>
      <%= f.label :interests %><br>
      <%= f.text_area :interests %>
    </p>

    <p>
      <%= f.submit %>
    </p>
<% end %>